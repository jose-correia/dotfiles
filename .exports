export GOPATH=$HOME/golang
export GO111MODULE="on"

export MAVEN_HOME=$HOME/programs/apache-maven-3.8.4
export MAVEN_OPTS="-Xmx512m -XX:MaxPermSize=128m"

export GROOVY_HOME=/usr/local/opt/groovy/libexec

export PYENV_HOME=$HOME/.pyenv

export KUBECONFIG=$HOME/.config/kubeconfig.yaml

export PATH=$HOME/bin:/usr/local/bin:$HOME/golang/bin:$PATH
export PATH=$PATH:/usr/local/opt/go/libexec/bin:/opt/apache-maven/bin
export PATH=$PATH:$PYENV_HOME/bin
export PATH=/usr/local/bin/python3.7:$PATH
export PATH=$PATH:$MAVEN_HOME/bin
export PATH=$PATH:$GROOVY_HOME/bin
export PATH=$PATH:$HOME/.jenv/bin

# pyenv setup
eval "$(pyenv init -)"
eval "$(pyenv virtualenv-init -)"

export REVIEW_BASE="master"

# You may need to manually set your language environment
export LANG="en_US.UTF-8"
export LC_ALL="en_US.UTF-8"
export LC_CTYPE="en_US.UTF-8"


# vim as default
export EDITOR="nvim"
export VISUAL="nvim"

export FZF_DEFAULT_OPTS='--height 40% --layout=reverse --border'
